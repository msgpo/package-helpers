clean_kconfig ubuntu/sound/alsa-kernel/pci/Kconfig 'SND_MAESTRO3.*'
sed -i '/CONFIG_SND_MAESTRO3/d;' ubuntu/sound/alsa-kernel/pci/Makefile
sed -i 's/maestro3\.c//;' ubuntu/sound/alsa-driver/pci/Makefile
